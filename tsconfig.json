{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "typeRoots": [

      "@types",

      "./node_modules/@types",

    ],
  },
  "include": [
    "src/**/*"
  ],
  "baseUrl": "./src",
  "paths": {
    "@/*": ["*"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}